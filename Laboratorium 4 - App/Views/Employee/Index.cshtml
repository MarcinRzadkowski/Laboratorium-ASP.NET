@model List<Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>Lista Pracowników</h2>
<table class="table">
    <tr>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            Dział
        </th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @item.FirstName
            </td>
            <td>
                @item.LastName
            </td>
            <td>
                @item.Departament
            </td>
            <td>
                <a class="btn btn-primary"
                   asp-action="Update"
                   asp-controller="Employee"
                   asp-route-id=@item.Id>Edytuj</a>
                <a class="btn btn-primary"
                   asp-action="Details"
                   asp-controller="Employee"
                   asp-route-id=@item.Id>Szczegóły</a>
                <a class="btn btn-primary"
                   asp-action="Delete"
                   asp-controller="Employee"
                   asp-route-id=@item.Id>Usuń</a>
            </td>
        </tr>
    }
</table>
<div>
    <a class="btn btn-primary" asp-controller="Employee" asp-action="Create">Dodaj</a>
</div>

