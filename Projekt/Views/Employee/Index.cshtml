@model List<Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<a class="btn btn-primary" asp-action="Create" asp-controller="Employee">Dodaj Pracownika</a>
<h2 class="text-center">Lista Pracowników</h2>
@if (@Model.Count > 0) 
{
<table class="table">
    <thead>
        <tr>
            <th>
                Imie
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                Dział
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Departament
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Employee" asp-route-id="@item.Id">Edytuj</a>
                    <a class="btn btn-primary" asp-action="Details" asp-controller="Employee" asp-route-id="@item.Id">Sczegóły</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
